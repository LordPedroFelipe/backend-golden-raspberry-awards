{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["ES6"],
    "outDir": "./dist",
    "rootDir": "./src",
    "emitDecoratorMetadata": true,   // Habilita metadados para decorators
    "experimentalDecorators": true,  // Habilita o uso de decorators
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false, // Para evitar erros de inicialização tardia
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}